<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th>Content</th>
      <th>Duration</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.tittle %></td>
        <td><%= course.description %></td>
        <td><%= course.content %></td>
        <td><%= course.duration %></td>
        <td><%= course.price %></td>
        <td><%= link_to 'Show', [course.school, course] %></td>
        <td><%= link_to 'Edit', edit_school_course_path(course.school, course) %></td>
        <td><%= link_to 'Destroy', [course.school, course], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

