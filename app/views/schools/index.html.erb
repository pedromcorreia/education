<p id="notice"><%= notice %></p>
<p>This is a multi tenancy application</p>
<p>For use the resources student and course, please create the school first </p>
<p>If you'r trying to access the resources and already created a school go to <b>you_school</b>.lvh.me:3000 </p>

<div class="container">
  <form role="form" action="/schools">
    <h2 class="">Search School and courses</h2>
    <input type="text" class="form-control" placeholder="Ex: Marista" name="keywords">
    <br>
    <button class="btn btn-primary btn-block" type="submit">Search</button>
    <br>
  </form>

  <% if @schools.present? %>
    <h1>Schools: </h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Pitch</th>
          <th>Subdomain</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <td><%= school.name %></td>
            <td><%= school.email %></td>
            <td><%= school.pitch %></td>
            <td><%= school.subdomain %></td>
            <td><%= link_to 'Show', school %></td>
            <td><%= link_to 'Edit', edit_school_path(school) %></td>
            <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <br>

  <% if @courses.present? %>
    <h1>Courses: </h1>
    <table>
      <thead>
        <tr>
          <th>Tittle</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.tittle %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
  <br>
</div>
<%= link_to 'New School', new_school_path %>
