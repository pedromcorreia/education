<p id="notice"><%= notice %></p>

<div class="container">
  <form role="form" action="/schools">
    <h2 class="">Search School</h2>
    <input type="text" class="form-control" placeholder="Ex: Marista" name="keywords">
    <br>
    <button class="btn btn-primary btn-block" type="submit">Search</button>
    <br>
  </form>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Pitch</th>
        <th>Subdomain</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <% if @schools.present? %>
      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <td><%= school.name %></td>
            <td><%= school.email %></td>
            <td><%= school.pitch %></td>
            <td><%= school.subdomain %></td>
            <td><%= link_to 'Show', school %></td>
            <td><%= link_to 'Edit', edit_school_path(school) %></td>
            <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      </tbody>
    <% end %>
  <% end %>
  </table>

  <br>


</div>
<%= link_to 'New School', new_school_path %>
